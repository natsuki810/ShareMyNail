<div class="bg-pink pl-3">
  <div class="row">
    <div class="col m-2">
        Home
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="h3">Admin top</div>
  </div>
  <div class="row">
    <div class="h4">New Design</div>
  </div>
  <div class="row">
    <% @designs.each do |design| %>
    <div class="col-3 my-3">
      <%= link_to admin_design_path(design.id), class: "design-link" do %>
        <%= image_tag design.image.variant(resize: '200x200') %>
      <% end %>
      <div class="col font-weight-bold">
        <%= design.name %>
      </div>
      <div class="col">
        <i class="fa-solid fa-user"></i>
        <%= design.user.name %>
      </div>
      <div class="col">
        ♥<%= design.favorites.count %>
        <i class="fa-solid fa-comment"></i>
        <%= design.comments.count + design.comments.map { |comment| comment.replies.count }.sum %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-3 my-3">
      <%= link_to "Designs All", admin_designs_path, class: "btn btn-outline-primary btn-block" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">New Report</div>
  </div>
  <div class="row">
    <% @reports.each do |report| %>
    <% if is_task_link(report) %>
      <div class="col-3 m-2 border rounded">
        <div class="col m-1">
          <i class="fa-solid fa-calendar-days"></i>
          <%= report.created_at.strftime('%Y/%m/%d') %>
        </div>
        <div class="col m-1">
          <i class="fa-solid fa-comment"></i>
          <%= target_link(report) %>
        </div>
        <div class="col m-1">
          <i class="fa-solid fa-user"></i>
          <%= report.user.name %>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-3 my-3">
      <%= link_to "Report All", admin_reports_path, class: "btn btn-outline-primary btn-block" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">New Comment</div>
  </div>
  <div class="row">
    <% @comments.each do |comment| %>
    <div class="col-3 m-2 border rounded">
      <div class="col m-1">
        <i class="fa-solid fa-calendar-days"></i>
        <%= comment.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class="col m-1">
        <i class="fa-solid fa-comment"></i>
        <%= comment.content %>
      </div>
      <div class="col m-1">
        <i class="fa-solid fa-user"></i>
        <%= comment.user.name %>
      </div>
      <div class="col m-1 text-right">
        <%= link_to "詳細", admin_design_path(comment.design.id) %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-3 my-3">
      <%= link_to "Comments All", admin_comments_path, class: "btn btn-outline-primary btn-block" %>
    </div>
  </div>
</div>

