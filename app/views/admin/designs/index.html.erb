<div class="bg-pink pl-3">
  <div class="row">
    <div class="col m-2">
      <%= link_to "Home", admin_top_path %> >
      Designs All
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="h3">Designs All</div>
  </div>
  <div class="row">
    <% @designs.each do |design| %>
    <div class="col-3 my-5">
      <%= link_to admin_design_path(design.id), class: "design-link" do %>
        <%= image_tag design.image.variant(resize: '200x200') %>
      <% end %>
      <div class="col font-weight-bold">
        design:<%= design.name %>
      </div>
      <div class="col">
        <i class="fa-solid fa-user"></i>
        user:<%= design.user.name %>
      </div>
      <div class="col">
        color:<%= design.color.name %>
      </div>
      <div class="col">
        â™¥<%= design.favorites.count %>
        <i class="fa-solid fa-comment"></i>
        <%= design.comments.count + design.comments.map { |comment| comment.replies.count }.sum %>
      </div>
    </div>
    <% end %>
  </div>
</div>