<div class="bg-pink pl-3">
  <%= link_to "Home", admin_top_path %> >
  Comments All
</div>
<div class="container">
  <div class="row">
    <div class="h3">Comments All</div>
  </div>
  <div class="row">
    <% @comment.each do |comment| %>
    <div class="col-7 m-2 border rounded">
      <%= comment.id %>
      <div class="col mx-1"><%= comment.created_at.strftime('%Y/%m/%d') %></div>
      <div class="col mx-1">
        To:<%= comment.design.user.name %>
        *<%= link_to admin_design_path(comment.design.id), class: "design-link" do %>
        <%= comment.design.name %>
        <% end %>
      </div>
      <div class="col mx-1">From:<%= comment.user.name %></div>
      <div class="col m-3"><%= comment.content %></div>
      <div class="col m-1">
          <%= link_to "コメント削除", admin_comments_destroy_path(comment), method: :delete, class: "text-danger" %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <% @replies.each do |reply| %>
    <div class="col-7 m-2 border rounded">
      <%= reply.id %>
      <div class="col mx-1"><%= reply.created_at.strftime('%Y/%m/%d') %></div>
      <div class="col mx-1">
        To:<%= reply.comment.design.user.name %>
        *<%= link_to design_path(reply.comment.design.id), class: "design-link" do %>
        <%= reply.comment.design.name %>
        <% end %>
      </div>
      <div class="col mx-1">From:<%= reply.user.name %></div>
      <div class="col m-3"><%= reply.content %></div>
      <div class="col m-1">
        <%= link_to "返信削除", admin_comment_reply_path(@comment, reply), method: :delete, class: "text-danger" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
