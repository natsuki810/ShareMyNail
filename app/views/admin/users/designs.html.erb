<div class="bg-pink pl-3">
  <div class="row">
    <div class="col m-2">
      <%= link_to "Home", admin_top_path %> >
      <%= link_to "Users All", admin_users_path %> >
      <%= link_to "User's Page",admin_user_path%> >
      User's Design All
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="h3">Users Designs All</div>
  </div>
  <div class="row">
    <% @designs.each do |design| %>
    <div class="col-3 my-5">
      <%= link_to admin_design_path(design.id), class: "design-link" do %>
        <%= image_tag design.image.variant(resize: '200x200') %>
      <% end %>
      <div class="col font-weight-bold">
        <%= design.name %>
      </div>
      <div class="col">
        <i class="fa-regular fa-user"></i>
        <%= design.user.name %>
      </div>
      <div class="col">
        <i class="fa-solid fa-palette"></i>
        <%= design.color.name %>
      </div>
      <div class="col">
        <i class="fa-solid fa-heart"></i>
        <%= design.favorites.count %>
        <i class="fa-solid fa-comment"></i>
        <%= design.comments.count + design.comments.map { |comment| comment.replies.count }.sum %>
      </div>
      <div class="col">
        <% if design.is_active %>
          <i class="fa-solid fa-unlock"></i>
          <span class="font-weight-bold text-success">公開</span>
        <% else %>
          <i class="fa-solid fa-lock"></i>
          <span class="font-weight-bold text-secondary">非公開</span>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>