<div class="bg-pink pl-3">
  <%= link_to "Home", admin_top_path %> >
  <%= link_to "Users All", admin_users_path %> >
  <%= link_to "User's Page",admin_user_path%> >
  Users Design All
</div>
<div class="container">
  <div class="row">
    <div class="h3">Users Designs All</div>
  </div>
  <div class="row">
    <% @designs.each do |design| %>
    <div class="col-3 my-5">
      <%= link_to admin_design_path(design.id), class: "design-link" do %>
        <%= image_tag design.image, width: "80%", height: "80%" %>
      <% end %>
      <div class="col">
        design:<%= design.name %>
      </div>
      <div class="col">
        color:<%= design.color.name %>
      </div>
      <div class="col">
        user:<%= design.user.name %>
      </div>
      <div class="col">
        status:
          <% if design.is_active %>
            <span class="font-weight-bold text-success">公開</span>
          <% else %>
            <span class="font-weight-bold text-secondary">非公開</span>
          <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>