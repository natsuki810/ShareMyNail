<div class="container-fluid bg-pink">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 my-3">
      <%= link_to "Home", admin_top_path %> >
      <%= link_to "User's Page", admin_users_path %> ><br class="d-sm-none">
      User's Profile
    </div>
  </div>
</div>
<%= form_with model: @user, url: admin_user_path do |f| %>
<div class="container">
  <div class="row">
    <div class="h3 col-lg-10 col-sm-12">Edit Profile</div>
  </div>
  <div class="row">
    <div class="h4">name</div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-12 mb-2 py-2">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">mail address</div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-12 mb-2 py-2">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">introduction</div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-12 mb-2 py-2">
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">user status</div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-12 mb-2 py-2">
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active, "退会"%>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3 col-sm-12 m-2">
      <%= f.submit "更新する", class: "btn btn-outline-success btn-block" %>
    </div>
    <div class="col-lg-3 col-sm-12 m-2">
      <%= link_to "User's Profile", admin_user_path(@user.id), class: "btn btn-outline-primary btn-block" %>
    </div>
  </div>
<% end %>
</div>