<div class="bg-pink pl-3">
  <%= link_to "Home", admin_top_path %> >
  <%= link_to "Users All", admin_users_path %> >
  <%= @user.name %>
</div>
<div class="container">
  <div class="row">
    <div class="h3">User's Page</div>
  </div>
    <div class="row">
    <div class="h4">Profile</div>
  </div>
  <div class="row">
    <div class="col-2 mb-2 py-2 font-weight-bold">use name</div>
    <div class="col-4 mb-2 py-2 border rounded">
      <%= @user.name %>
    </div>
    <div class="col-2 mb-2 py-2 font-weight-bold">mail address</div>
    <div class="col-4 mb-2 py-2 border rounded">
      <%= @user.email %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 my-2 py-3 font-weight-bold">Introduction</div>
    <div class="col-6 my-2 py-3 border rounded">
      <%= @user.introduction %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 my-2 py-3 font-weight-bold">user status</div>
    <div class="col-2 my-2 py-3">
      <% if @user.is_active %>
        <span class="font-weight-bold text-success">有効</span>
      <% else %>
        <span class="font-weight-bold text-secondary">退会</span>
      <% end %>
    </div>
  </div>
    <div class="row">
      <div class="col-3 my-2 py-3">
        <%= link_to "Edit Profile >>", edit_admin_user_path, class: "btn btn-outline-primary btn-block" %>
      </div>
    </div>
  <div class="row">
    <div class="h4">User's Design</div>
  </div>
  <div class="row">
    <% @designs.each do |design| %>
    <div class="col-3 my-5">
      <%= link_to admin_design_path(design.id), class: "design-link" do %>
        <%= image_tag design.image, width: "80%", height: "80%" %>
      <% end %>
      <div class="col">
        <%= design.name %>
      </div>
      <div class="col">
        <%= design.user.name %>
      </div>
      <div class="col">
        <% if design.is_active %>
          <span class="font-weight-bold text-success">公開</span>
        <% else %>
          <span class="font-weight-bold text-secondary">非公開</span>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-3">
      <%= link_to "User's Designs AlL >>", admin_users_designs_path(@user.id), class: "btn btn-outline-primary btn-block" %>
    </div>
    <div class="col-3">
      <%= link_to "User's Comments AlL >>", admin_path, class: "btn btn-outline-primary btn-block" %>
    </div>
  </div>
</div>
</div>