<div class="bg-pink pl-3">
  <%= link_to "Home", admin_top_path %> >
  Reports All
</div>
<div class="container">
  <div class="row">
    <div class="h3">Reports All</div>
  </div>
  <div class="row">
    <div class="col">
      <div class="h4">報告日</div>
    </div>
    <div class="col">
      <div class="h4">報告内容</div>
    </div>
    <div class="col">
      <div class="h4">報告箇所</div>
    </div>
  </div>
  <% @report.each do |report| %>
  <div class="row">
    <div class="col my-2 border">
      <%= report.created_at.strftime('%Y/%m/%d') %>
      <div class="col">
        <%= report.status %>
      </div>
    </div>
    <div class="col my-2 border">
      <%= report.introduction %>
    </div>
    <div class="col my-2 border">
      <%= target_link(report) %>
    </div>
  </div>
  <% end %>
</div>