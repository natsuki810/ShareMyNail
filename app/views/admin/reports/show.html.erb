<div class="bg-pink pl-3">
  <%= link_to "Home", admin_top_path %> >
  Reports All
</div>
<div class="container">
  <div class="row">
    <div class="h3">報告内容</div>
  </div>
  <div class="row">
    <div class="col-2">
      <div class="h4">No.</div>
      <div class="col mb-5"><%= @report.id %></div>
    </div>
    <div class="col-2">
      <div class="h4">報告日</div>
      <div class="col mb-5"><%= @report.created_at.strftime('%Y/%m/%d') %></div>
    </div>
    <div class="col-2">
      <div class="h4">報告内容</div>
      <div class="col mb-5"><%= @report.introduction %></div>
    </div>
    <div class="col-2">
      <div class="h4">報告者</div>
      <div class="col mb-5"><%= @report.user.name %></div>
    </div>
  </div>
    <% if @report.design.present? %>
    <div class="row">
      <div class="h5"><%= @report.design.name %></div>
    </div>
    <div class="row">
      <div class="col-2 my-3">投稿者</div>
      <div class="col-2 my-3 font-weight-bold"><%= @report.design.user.name %></div>
    </div>
    <div class="row">
      <div class="col-2 my-3 font-weight-bold"><%= @report.design.introduction %></div>
    </div>
    <div class="row">
      <div class="col">
        <%= image_tag @report.design.image, width: "100%", height: "100%" %>
      </div>
    </div>
    <div class="row">
      <div class="col-5 my-3">
        <%= link_to "対応済", admin_designs_reports_path(@report.id),method: :put, class: "btn btn-outline-success btn-block" %>
      </div>
      <div class="col-5 my-3">
        <%= link_to "削除", admin_design_destroy_path(@report.design.id), method: :delete, class: "btn btn-outline-danger btn-block" %>
      </div>
    </div>
    <% elsif @report.comment.present? %>
    <div class="row">
      <div class="h4">コメント</div>
    </div>
    <div class="row">
      <div class="col-2 my-3">投稿者</div>
      <div class="col-2 my-3 font-weight-bold"><%= @report.comment.user.name %></div>
    </div>
    <div class="row">
      <div class="col-2 my-3">コメント</div>
      <div class="col-2 my-3 font-weight-bold"><%= @report.comment.content %></div>
    </div>
    <div class="row">
      <div class="col-5 my-3">
        <%= link_to "対応済", admin_designs_reports_path(@report.id),method: :put,class: "btn btn-outline-success btn-block" %>
      </div>
      <div class="col-5 my-3">
        <%= link_to "削除するccc", admin_comments_destroy_path(@comment.id), method: :delete, class: "btn btn-outline-danger btn-block" %>
      </div>
    </div>
    <% elsif @report.reply.present? %>
    <div class="row">
      <div class="h4">コメント返信</div>
    </div>
    <div class="row">
      <div class="col-2 my-3">投稿者</div>
      <div class="col-2 my-3 font-weight-bold"><%= @report.reply.user.name %></div>
    </div>
    <div class="row">
      <div class="col-2 my-3">コメント返信</div>
      <div class="col-2 my-3 font-weight-bold"><%= @report.reply.content %></div>
    </div>
    <div class="row">
      <div class="col-5 my-3">
        <%= link_to "対応済", admin_designs_reports_path(@report.id),method: :put, class: "btn btn-outline-success btn-block" %>
      </div>
      <div class="col-5 my-3">
        <%= link_to "削除する", admin_comment_reply__path(@report.reply.id), method: :delete, class: "btn btn-outline-danger btn-block" %>
      </div>
    </div>
    <% end %>
</div>