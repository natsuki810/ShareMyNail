<div class="bg-pink pl-3">
  <div class="row">
    <div class="col m-2">
      <%= link_to "Home", admin_top_path %> >
      Colors All
    </div>
  </div>
</div>
<%= render "public/shared/flash", flash_message: flash[:notice] %>
<%= form_with model: @color, url: admin_colors_path do |f| %>
<div class="container">
  <div class="row">
    <div class="h3">Colors All</div>
  </div>
  <div class="row">
    <div class="h4">Create Color</div>
  </div>
  <div class="row">
    <div class="col-3 my-2">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-3 my-2">
      <%= f.submit "追加", class: "btn btn-outline-success btn-block" %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="h4">Colors</div>
  </div>
  <% @colors.each do |color| %>
  <div class="row">
    <div class="col-3 my-2">
      <%= color.name %>
    </div>
    <% if color.name != "その他" %>
    <div class="col-3 my-2">
      <%= link_to "削除", admin_color_path(color.id), method: :delete, class: "btn btn-outline-danger btn-block", data: { confirm: '本当に削除しますか？' } %>
    </div>
    <% end %>
  </div>
  <% end%>
</div>