<div class="bg-pink pl-3">
  <div class="row">
    <div class="col m-2">
      <%= link_to "Home", root_path %> >
      <%= link_to "Designs All", designs_path %> >
      Report
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="h3">Report</div>
  </div>
  <%= form_with url: design_reports_path(@design) do |f| %>
  <div class="row">
    <div class="col-8 m-2 p-2">
      <% if @type == "design" %>
        不適切な デザイン を報告する
      <% elsif @type == "comment" %>
        不適切な コメント を報告する
      <% else %>
        不適切な コメント を報告する
      <% end %>
    </div>
  </div>
    <div class="col-8 m-2 p-2">
      <%= f.hidden_field :type, value: @type%>
      <%= f.hidden_field :content_id, value: @id %>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
    <div class="col-8 m-2 p-2">
      <%= f.submit "報告する", class: "btn btn-outline-danger btn-block" %>
    </div>
  <% end %>
  </div>
</div>