<div class="bg-pink pl-3">
  <div class="row">
    <div class="col m-2">
      <%= link_to "Home", root_path %> >
      <%= link_to "My Page",users_mypage_path %> >
      Comments All
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="h3">Comments All</div>
  </div>
  <div class="row">
    <% @comments.each do |comment| %>
    <div class="col-7 mb-3 border border-2">
      <div class="col mx-1"><%= comment.created_at.strftime('%Y/%m/%d') %></div>
      <div class="col mx-1">
         To:<%= comment.design.user.name %>
        *<%= link_to design_path(comment.design.id), class: "design-link" do %>
        <%= comment.design.name %>
        <% end %>
      </div>
      <div class="col mx-1">From:<%= comment.user.name %></div>
      <div class="col m-3"><%= comment.content %></div>
      <div class="col m-1">
          <%= link_to "コメント削除", comments_destroy_path(comment), method: :delete, class: "text-danger" %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <% @replies.each do |reply| %>
    <div class="col-7 mb-3 border border-2">
      <%= reply.id %>
      <div class="col mx-1"><%= reply.created_at.strftime('%Y/%m/%d') %></div>
      <div class="col mx-1">
      To:<%= reply.comment.design.user.name %>
      *<%= link_to design_path(reply.comment.design.id), class: "design-link" do %>
      <%= reply.comment.design.name %>
      <% end %>
      </div>
      <div class="col mx-1">From:<%= reply.user.name %></div>
      <div class="col m-3"><%= reply.content %></div>
      <div class="col m-1">
        <%= link_to "返信削除", replies_destroy_path(reply), method: :delete, class: "text-danger" %>
      </div>
    </div>
    <% end %>
  </div>
</div>