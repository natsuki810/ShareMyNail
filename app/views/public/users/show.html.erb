<div class="bg-pink pl-3">
  <%= link_to "Home", root_path %> > My Page
</div>
<div class="container">
  <div class="row">
    <div class="h3">My Page</div>
  </div>
  <div class="row">
    <div class="h4">Profile</div>
  </div>
  <div class="row">
    <div class="col-2 mb-2 py-2 font-weight-bold">use name</div>
    <div class="col-4 mb-2 py-2 border rounded">
      <%= @user.name %>
    </div>
    <div class="col-2 mb-2 py-2 font-weight-bold">mail address</div>
    <div class="col-4 mb-2 py-2 border rounded">
      <%= @user.email %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 my-2 py-3 font-weight-bold">Introduction</div>
    <div class="col-6 my-2 py-3 border rounded">
      <%= @user.introduction %>
    </div>
  </div>
    <div class="row">
      <div class="col-3 my-2 py-3">
        <%= link_to "Edit Profile >>", users_mypage_edit_path, class: "btn btn-outline-primary btn-block" %>
      </div>
    </div>
  <div class="row">
    <div class="h4">My Design</div>
  </div>
  <div class="row">
    <% @designs.each do |design| %>
    <div class="col-3 my-4">
      <%= link_to design_path(design.id), class: "design-link" do %>
        <%= image_tag design.image, width: "80%", height: "80%" %>
      <% end %>
      <div class="col">
        <%= design.name %>
      </div>
      <div class="col">
        ♥<%= design.favorites.count %>
        コメント<%= design.comments.count %>
      </div>
      <div class="col">
        <% if design.is_active %>
          <span class="font-weight-bold text-success">公開</span>
        <% else %>
          <span class="font-weight-bold text-secondary">非公開</span>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-3 my-3">
      <%= link_to "User's Designs All >>", users_designs_path(current_user.id), class: "btn btn-outline-primary btn-block" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">Favorite Designs</div>
  </div>
  <div class="row">
  <% @favorites.each do |favorites| %>
  <% if favorites.design.is_active == true %>
    <div class="col-3 my-5">
    <%= link_to design_path(favorites.design.id), class: "design-link" do %>
      <%= image_tag favorites.design.image, width: "80%", height: "80%" %>
    <% end %>
    <div class="col">
      design:<%= favorites.design.name %>
    </div>
    <div class="col">
      color:<%= favorites.design.color.name %>
    </div>
    <div class="col">
      user:<%= favorites.design.user.name %>
    </div>
    <div class="col">
      ♥<%= favorites.design.favorites.count %>
      コメント<%= favorites.design.comments.count %>
    </div>
  </div>
  <% end %>
  <% end %>
  </div>
  <div class="row">
    <div class="col-3 my-3">
      <%= link_to "Favorite Designs >>", favorites_path(current_user.id), class: "btn btn-outline-primary btn-block" %>
    </div>
    <div class="col-3 my-3">
      <%= link_to "Comments All >>", users_comments_path, class: "btn btn-outline-primary btn-block" %>
    </div>
    <div class="col-3 my-3">
      <%= link_to "New Post >>", new_design_path, class: "btn btn-outline-primary btn-block" %>
    </div>
  </div>
</div>