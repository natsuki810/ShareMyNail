<div class="bg-pink pl-3">
  <div class="row">
    <div class="col m-2">
      <%= link_to "Home", root_path %> >
      User's Design All
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="h3">User's Designs All</div>
  </div>
  <div class="row">
    <% @designs.each do |design| %>
    <div class="col-3 my-5">
      <%= link_to design_path(design.id), class: "design-link" do %>
        <%= image_tag design.image, width: "80%", height: "80%" %>
      <% end %>
      <div class="col">
        design:<%= design.name %>
      </div>
      <div class="col">
        color:<%= design.color.name %>
      </div>
      <div class="col">
        user:<%= design.user.name %>
      </div>
      <% if design.user_id == current_user.id %>
      <div class="col">
        status:
          <% if design.is_active %>
            <span class="font-weight-bold text-success">公開</span>
          <% else %>
            <span class="font-weight-bold text-secondary">非公開</span>
          <% end %>
      </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>