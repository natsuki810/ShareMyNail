<div class="bg-pink pl-3">
  <%= link_to "Home", root_path %> >
  <%= link_to "My Page",users_mypage_path %> >
  All My Design
</div>
<div class="container">
  <div class="row">
    <div class="h3">All My Design</div>
  </div>
  <div class="row">
    <% @current_user.designs.each do |design| %>
    <div class="col-3 my-3">
      <%= link_to design_path(design.id), class: "design-link" do %>
        <%= image_tag design.image, width: "80%", height: "80%" %>
      <% end %>
      <div class="col">
        design:<%= design.name %>
      </div>
      <div class="col">
        color:<%= design.color.name %>
      </div>
      <div class="col">
        status:
          <% if design.is_active %>
            <span class="font-weight-bold text-success">Public</span>
          <% else %>
            <span class="font-weight-bold text-secondary">Private</span>
          <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>