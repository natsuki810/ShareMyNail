<div class="bg-pink pl-3">
  <div class="row">
    <div class="col m-2">
      <%= link_to "Home", root_path %> >
      <%= link_to "My Page", users_mypage_path %> >
      My Profile
    </div>
  </div>
</div>
<%= render "public/shared/error_messages", resource: @user %>
<%= form_with model: @user, url: users_mypage_edit_path do |f| %>
<div class="container">
  <div class="row">
    <div class="h3">Edit My Profile</div>
  </div>
  <div class="row">
    <div class="h4">name</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">mail address</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">introduction</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 my-2">
      <%= f.submit "Update", class: "btn btn-outline-success btn-block" %>
    </div>
    <div class="col-3 my-2">
      <%= link_to "Withdraw", users_confirm_path, class: "btn btn-outline-danger btn-block" %>
    </div>
  </div>
<% end %>
</div>