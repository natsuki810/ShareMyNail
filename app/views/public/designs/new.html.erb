<div class="bg-pink pl-3">
  <%= link_to "Home", root_path %> >
  New Post
</div>
<%= form_with model: @design, url: new_design_path do |f| %>
<div class="container">
  <div class="row">
    <div class="h3">New Post</div>
  </div>
  <div class="row">
    <div class="h4">image</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="row">
    <div class="h4">title</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="h4">introduction</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="h4">color</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      
    </div>
  </div>
  <div class="row">
    <div class="col-3 m-2">
      <%= f.submit "Create",class: "btn btn-outline-success btn-block" %>
    </div>
  </div>
<% end %>
</div>