<div class="bg-pink pl-3">
  <%= link_to "Home", root_path %> >
  New Post
</div>
<%= form_with model: @design, url: designs_path do |f| %>
<div class="container">
  <div class="row">
    <div class="h3">New Post</div>
  </div>
  <div class="row">
    <div class="h4">title</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="row">
    <div class="h4">image</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="row">
    <div class="h4">introduction</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="h4">color</div>
  </div>
  <div class="row">
    <div class="col-6 mb-2 py-2">
      <%= f.collection_select(:color_id, Color.all, :id, :name,{selected: Color.find_by_name("その他").id},{}) %>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mn-2 py-2">
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active, "Public" %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active, "Private" %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 m-2">
      <%= f.submit "Create",class: "btn btn-outline-success btn-block" %>
    </div>
  </div>
<% end %>
</div>