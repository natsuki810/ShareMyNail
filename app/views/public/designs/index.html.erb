<div class="bg-pink pl-3">
  <%= link_to "Home", root_path %> >
  Designs All
</div>
<div class="container">
  <div class="row">
    <div class="h3">Designs All</div>
  </div>
  <div class="row">
    <% @designs.each do |design| %>
    <div class="col-3 my-3">
      <%= link_to design_path(design.id), class: "design-link" do %>
        <%= image_tag design.image, width: "80%", height: "80%" %>
      <% end %>
      <div class="col">
        design:<%= design.name %>
      </div>
      <div class="col">
        user:<%= design.user.name %>
      </div>
      <div class="col">
        color:<%= design.color.name %>
      </div>
      <div class="col">
        ♥<%= design.favorites.count %>
        コメント<%= design.comments.count + design.comments.map { |comment| comment.replies.count }.sum %>
      </div>

    </div>
    <% end %>
  </div>
</div>