<div class="container-fluid bg-pink">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 my-3">
        <%= link_to "Home", root_path %> >
        <%= link_to "Designs All", designs_path %> ><br class="d-lg-none">
        <%= link_to  @design.name, design_path(@design.id) %> ><br class="d-sm-none">
        Edit Design
    </div>
  </div>
</div>
<%= render "public/shared/error_messages", resource: @design %>
<%= form_with model: @design, url: design_path do |f| %>
<div class="container">
  <div class="row">
    <div class="h3 col-lg-10 col-sm-12">My Design</div>
  </div>
  <div class="row">
    <div class="h4">title</div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-12 mb-2 py-2">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">image</div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-12 mb-2 py-2">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">introduction</div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-12 mb-2 py-2">
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="h4">color</div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-12 mb-2 py-2">
      <%= f.collection_select(:color_id, Color.all, :id, :name) %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-12 mb- py-2">
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active, "公開", value: true %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active, "下書き保存", value: false %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3 col-sm-12 m-2">
      <%= f.submit "更新する", class: "btn btn-outline-success btn-block" %>
    </div>
    <div class="col-lg-3 col-sm-12 m-2">
      <%= link_to "削除する", design_path(@design.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-danger btn-block" %>
    </div>
  </div>
<% end %>
</div>

