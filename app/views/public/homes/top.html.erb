<div class="bg-pink pl-3">
  Home
</div>
<div class="container">
  <div class="row">
    <div class="h3">
      ようこそ、ShareMyNailへ
    </div>
  </div>
  <div class="row">
    <div class="col p-2">
      <span class="h5">ShareMyNail</span>は<br>
      セルフネイラーのためのデザイン検索サイトです。<br>
    </div>
  </div>
  <div class="row">
    <div class="h4">New Design</div>
  </div>
  <div class="row">
    <% @designs.each do |design| %>
    <% if @count == 4 %>
    <% break %>
    <% end %>
    <div class="col-2 m-1">
      <%= link_to designs_path(design.id) do %>
        <%= attachment_image_tag design_image, :image %>
      <% end %>
    </div>
  <div class="row">
    <div class="col-2 m-1">
      <%= design.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 m-1">
      <%= design.user.name %>
    </div>
  </div>
  </div>
  <% end %>
</div>


