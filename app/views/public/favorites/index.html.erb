<div class="container-fluid bg-pink">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 my-md-3 my-sm-1">
      <%= link_to "Home", root_path %> >
      <%= link_to "My Page",users_mypage_path(@user.id) %> ><br class="d-sm-none">
      Favorite Designs
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="h3 col-lg-10 col-sm-12">Favorite Designs</div>
  </div>
  <div class="row">
    <% @favorites.each do |favorites| %>
    <% if favorites.design.is_active == true %>
    <div class="col-lg-3 col-md-6 col-sm-12 my-5">
      <%= link_to design_path(favorites.design.id), class: "design-link" do %>
        <%= image_tag favorites.design.image.variant(resize: '200x200') %>
      <% end %>
      <div class="col-12 font-weight-bold">
        <%= favorites.design.name %>
      </div>
      <div class="col-12">
        <div class="fa-solid fa-calendar-days">
          <%= favorites.design.created_at.strftime('%Y/%m/%d')  %>
        </div>
      </div>
      <div class="col-12">
        <i class="fa-regular fa-user"></i>
        <%= favorites.design.user.name %>
      </div>
      <div class="col-12">
        <i class="fa-solid fa-palette"></i>
        <%= favorites.design.color.name %>
      </div>
      <div class="col-12">
        <i class="fa-solid fa-heart"></i>
        <%= favorites.design.favorites.count %>
        <i class="fa-regular fa-comment"></i>
        <%= favorites.design.comments.count %>
      </div>
    </div>
  <% end %>
  <% end %>
  </div>
</div>